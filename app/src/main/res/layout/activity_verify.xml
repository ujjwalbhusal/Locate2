<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reading"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewImageVerify"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingVertical="64dp"
        app:srcCompat="@drawable/password"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_rocker"
        android:layout_marginVertical="8dp"
        android:padding="@dimen/dimen_8x"
        android:text="@string/verify_your_email"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textverify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trade_winds"
        android:layout_marginVertical="8dp"
        android:padding="@dimen/dimen_16x"
        android:text="A verification link is sent to "
        android:textSize="24sp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/realtime"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"
        android:layout_marginLeft="@dimen/dimen_16x"
        android:layout_marginStart="@dimen/dimen_16x"
        android:layout_marginRight="@dimen/dimen_16x"
        android:layout_marginEnd="@dimen/dimen_16x"
        android:layout_marginBottom="@dimen/dimen_4x"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/ok" />

    <Button
        android:id="@+id/buttonresendverify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@color/realtime"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dimen_4x"
        android:text="Resend Verification Link" />

    <Button
        android:id="@+id/buttoncancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@color/realtime"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dimen_4x"
        android:text="Cancel" />


</LinearLayout>
</androidx.core.widget.NestedScrollView>
